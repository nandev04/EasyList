{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["vitest/globals"],
    "typeRoots": ["./types", "./node_modules/@types", "./node_modules"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
